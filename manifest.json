{
    "manifest_version": 2,
    "name": "HyperBold",
    "version": "1.0.0",
    "description": "A Firefox extension that makes text bold and easy to read.",
    "author": "Rushill Shah",
    "permissions": ["activeTab"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "web_accessible_resources": [
      "content.js"
    ]
  }
  